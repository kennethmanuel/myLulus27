<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyLulus27" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#006064</item>
        <item name="colorPrimaryVariant">#00363a</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#006064</item>
        <item name="colorSecondaryVariant">#428e92</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <!-- buat format tag style font pada heading -->
    <style name="headingtitle" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">36sp</item>
        <item name="android:textColor">#006064</item>
    </style>
    <!-- buat format tag style font pada subtitle -->
    <style name="subtitle" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">@font/karla</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">#006064</item>
    </style>
    <!-- buat format tag style font pada body -->
    <style name="body" parent="TextAppearance.MaterialComponents.Body1">
        <item name="fontFamily">@font/karla</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#006064</item>
    </style>
    <!-- buat format tag style font pada button -->
    <style name="tombol" parent="TextAppearance.MaterialComponents.Button">
        <item name="fontFamily">@font/karla</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#006064</item>
    </style>
    <!-- buat formal tag style font color di action bar -->
    <style name="pagetitleexpanded" parent="TextAppearance.MaterialComponents.Headline1">
        <item name="fontFamily">@font/rubik_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="Widget.BottomNavigationView"
        parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/karla</item>
    </style>

</resources>